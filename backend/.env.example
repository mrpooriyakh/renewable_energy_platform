# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/renewable_energy_db
DATABASE_URL_SYNC=postgresql://user:password@localhost:5432/renewable_energy_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage (MinIO/S3)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=renewable-energy-files
MINIO_SECURE=false

# AWS S3 (Alternative to MinIO)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=renewable-energy-files

# Application Settings
DEBUG=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "https://renewable-energy-platform-n9g3.vercel.app"]
MAX_FILE_SIZE=50  # MB
ALLOWED_FILE_TYPES=["pdf", "mp4", "mov", "avi", "ppt", "pptx", "doc", "docx", "txt", "md"]

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1