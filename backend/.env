# Local Development Configuration with SQLite
DATABASE_URL=sqlite+aiosqlite:///./renewable_energy.db
DATABASE_URL_SYNC=sqlite:///./renewable_energy.db

# Redis Configuration (Optional for local)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=local-development-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage - Local files for development
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./uploads

# MinIO Configuration (for when Docker is ready)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=renewable-energy-files
MINIO_SECURE=false

# Application Settings
DEBUG=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:5173", "https://renewable-energy-platform-n9g3.vercel.app"]
MAX_FILE_SIZE=50  # MB
ALLOWED_FILE_TYPES=["pdf", "mp4", "mov", "avi", "wmv", "ppt", "pptx", "doc", "docx", "txt", "md", "jpg", "jpeg", "png"]

# Development Mode
DEVELOPMENT_MODE=true